#!/usr/bin/env node

var daemon = require("daemonize2").setup({
    main: "commentserver.js",
    name: "commentserver",
    pidfile: "commentserver.pid"
});

switch (process.argv[2]) {

    case "start":
        daemon.start();
        break;

    case "stop":
        daemon.stop();
        break;

    default:
        console.log("Usage: [start|stop]");
}
